{
    "rules": {
        "formatOnSave": true,
        "formatOnPaste": true,
        "trimTrailingWhitespace": true,
        "insertFinalNewline": true,
        "tabSize": 4,
        "useTabs": false,
        "lineEnding": "lf"
    },
    "ignore": [
        "zig-cache",
        "zig-out",
        ".git",
        "node_modules",
        "__pycache__",
        "*.pyc",
        "*.pyo",
        "*.pyd",
        ".Python",
        "env",
        "build",
        "develop-eggs",
        "dist",
        "downloads",
        "eggs",
        ".eggs",
        "lib",
        "lib64",
        "parts",
        "sdist",
        "var",
        "*.egg-info",
        ".installed.cfg",
        "*.egg"
    ],
    "search": {
        "exclude": [
            "zig-cache",
            "zig-out",
            ".git",
            "node_modules",
            "__pycache__",
            "*.pyc",
            "*.pyo",
            "*.pyd",
            ".Python",
            "env",
            "build",
            "develop-eggs",
            "dist",
            "downloads",
            "eggs",
            ".eggs",
            "lib",
            "lib64",
            "parts",
            "sdist",
            "var",
            "*.egg-info",
            ".installed.cfg",
            "*.egg"
        ]
    }
} 